---
import FormattedDate from "./FormattedDate.astro";
import TagList from "./TagList.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags: string[];
  slug: string;
}

const { title, description, pubDate, tags, slug } = Astro.props;
---

<article class="group rounded-lg border border-(--color-border) p-5 transition-colors hover:border-(--color-accent)">
  <a href={`/blog/${slug}`} class="block">
    <h3 class="text-lg font-semibold text-(--color-text) group-hover:text-(--color-accent) transition-colors">
      {title}
    </h3>
    <p class="mt-1 text-sm text-(--color-text-secondary)">
      <FormattedDate date={pubDate} />
    </p>
    <p class="mt-2 text-(--color-text-secondary) line-clamp-2">
      {description}
    </p>
  </a>
  <div class="mt-3">
    <TagList tags={tags} />
  </div>
</article>
