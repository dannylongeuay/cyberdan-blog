---
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import TagList from "../components/TagList.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags: string[];
  minutesRead: string;
}

const { title, description, pubDate, updatedDate, heroImage, tags, minutesRead } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <article>
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-(--color-text) sm:text-4xl">{title}</h1>
      <div class="mt-3 flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-(--color-text-secondary)">
        <FormattedDate date={pubDate} />
        {updatedDate && (
          <span>
            (Updated: <FormattedDate date={updatedDate} />)
          </span>
        )}
        <span>{minutesRead}</span>
      </div>
      <div class="mt-4">
        <TagList tags={tags} />
      </div>
    </header>
    {heroImage && (
      <img
        src={heroImage}
        alt=""
        class="mb-8 w-full rounded-lg"
      />
    )}
    <div class="prose max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
